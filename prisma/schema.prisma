generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Content {
  contentId             String           @id @unique
  name           String
  content        String
  createdAt      DateTime
  updatedAt      DateTime?
  deletedAt      DateTime?
  archived       Boolean?
}

